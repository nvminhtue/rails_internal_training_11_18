<tr>
  <td><%= index_of_book(book_counter, params[:page], Settings.paginations.per_page ) %></td>
  <td><%= link_to book.name,book %></td>
  <td><%= book.author_name %></td>
  <td><%= book.category_name %></td>
  <td><%= book.publisher_name %></td>
  <td><%= book.created_at.strftime("%Y-%m-%d")%></td>

  <td>
    <div class="btn-group btn-group-sm">
      <%= link_to edit_book_path(book), class: "btn btn-sm btn-warning", title: t(".edit") do %>
        <i class="fas fa-pencil-alt"></i>
      <% end %>
      <%= link_to book_path(book), method: :delete, data: {confirm: "Are you sure?", remote: true}, class: "btn btn-sm btn-danger delete_book", title: t(".delete") do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
  </td>
</tr>
