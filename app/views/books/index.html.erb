<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-book"></i>
    <%= t ".manage_books" %>
  </div>
  <div class="card-body">
    <%= render "search_books" %>
    <div class="table-responsive">
      <table class="table table-bordered table-striped" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th class="w-5"><%= t ".index" %></th>
            <th><%= t ".book_name" %></th>
            <th><%= t ".author" %></th>
            <th><%= t ".category" %></th>
            <th><%= t ".publisher" %></th>
            <th><%= t ".publish_at" %></th>
            <th class="w-5"><%= t ".action" %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>1</td>
            <td>System Architect</td>
            <td>Edinburgh</td>
            <td>Edinburgh</td>
            <td>Edinburgh</td>
            <td>2011/04/25</td>
            <td>
              <div class="btn-group btn-group-sm">
                <%= link_to "#", class: "btn btn-sm btn-warning", title: t(".edit") do %>
                  <i class="fas fa-pencil-alt"></i>
                <% end %>
                <%= link_to "#", class: "btn btn-sm btn-danger", title: t(".delete") do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

